@model IEnumerable<Confectionery.Data.Entities.Cliente>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Rif)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RazonSocial)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DireccionFiscal)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefono)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FechaRegistro)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Rif)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RazonSocial)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DireccionFiscal)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefono)
				</td>
				
				<td>
					@Html.DisplayFor(modelItem => item.FechaRegistro)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.ClienteId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.ClienteId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.ClienteId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
